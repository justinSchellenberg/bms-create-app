{
  "name": "bms-create-app",
  "version": "0.0.3",
  "description": "bms-utility-functions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha --timeout 10000 -r ts-node/register test/**/*",
    "BDD": "onchange ./**/*.ts test/**/*.ts -- npm test",
    "coverage": "nyc mocha -r ts-node/register test/**/*",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "publishModule": "npm run build && npm publish",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist/",
      "node_modules",
      "src/index.ts"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  },
  "keywords": [],
  "author": "Justin Schellenberg",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bin": {
    "bms-create-app": "./dist/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@types/chai": "^4.1.6",
    "@types/es6-promise": "^3.3.0",
    "@types/es6-shim": "^0.31.37",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.9",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "onchange": "^5.0.2",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/chalk": "^2.2.0",
    "@types/inquirer": "^0.0.43",
    "@types/shelljs": "^0.8.0",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "inquirer": "^6.2.0",
    "shelljs": "^0.8.3"
  }
}
